<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeradmin"
    android:orientation="vertical"
    android:background="@color/yellow_unika">


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/back" />


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:text="www.ust.ac.id"
            android:textAlignment="center"
            android:textColor="#042059"
            android:textSize="15dp"
            android:textStyle="italic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/ust"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/form"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAFTAR SEBAGAI ADMIN"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>



        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:drawableStart="@drawable/email"
            android:hint="Email or NIDN"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="viewStart"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etpass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:textAlignment="viewStart"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:hint=" Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"/>


        <EditText
            android:id="@+id/etretypepass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:textAlignment="viewStart"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:layout_marginBottom="10dp"/>



        <EditText
            android:id="@+id/etfullname"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:textAlignment="viewStart"
            android:drawableStart="@drawable/useric"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textStyle="italic" />



        <EditText
            android:id="@+id/etage"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:layout_marginBottom="10dp"

            android:drawableStart="@drawable/useric"
            android:hint="Age"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textStyle="italic" />

        <Spinner
            android:id="@+id/spinpendidikan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="viewStart"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/combobox"
            android:entries="@array/Pendidikan_Terakhir" />

        <Spinner
            android:id="@+id/spinfakultas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="viewStart"
            android:background="@drawable/combobox"
            android:entries="@array/Fakultas" />



        <Button

            android:id="@+id/btsend"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:background="@drawable/blackbutton"
            android:text="KIRIM"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btgotologin"
            android:layout_width="200dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:background="@drawable/blackbutton"
            android:text="Go to Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/vorang"
           >




        </RelativeLayout>


    </LinearLayout>

</LinearLayout>



